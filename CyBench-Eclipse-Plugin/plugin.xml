<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

	<!-- Launcher configuration delegate -->
	<extension point="org.eclipse.debug.core.launchConfigurationTypes">
	    <launchConfigurationType
	        name="CyBench"
	        delegate="com.gocypher.cybench.plugin.handlers.LaunchRunConfiguration"
	        modes="run"
	        id="com.gocypher.cybench.plugin.launchConfigurationType">
	    </launchConfigurationType>
	</extension>
	
	<!-- Launcher shortcut launch  -->
	<extension
	    point="org.eclipse.debug.ui.launchShortcuts">
	    <shortcut
	        class="com.gocypher.cybench.plugin.handlers.LaunchShortcut"
	        icon="icons/cybench_symbol_small.png"
	        id="com.gocypher.cybench.plugin.shortcut"
	        label="Run on CyBench"
	        modes="run">
	        <contextualLaunch>
	            <enablement>
	                <with
	                    variable="selection">
	                    <count
	                        value="+">
	                    </count>
	                </with>
	            </enablement>
	        </contextualLaunch>
	    </shortcut>
	</extension>
	
	<!-- Tab for launch configurations -->
	<extension
	    point="org.eclipse.debug.ui.launchConfigurationTabGroups">
	    <launchConfigurationTabGroup
	        class="com.gocypher.cybench.plugin.views.TabGroup"
	        id="com.gocypher.cybench.plugin.launchConfigurationTabGroup"
	        type="com.gocypher.cybench.plugin.launchConfigurationType">
	    </launchConfigurationTabGroup>
	</extension>
	
	<!-- Launcher icon  -->
	<extension
	        point="org.eclipse.debug.ui.launchConfigurationTypeImages">
	    <launchConfigurationTypeImage
	            id="com.gocypher.cybench.plugin.launchconfigurationtypeimage"
	            configTypeID="com.gocypher.cybench.plugin.launchConfigurationType"
	            icon="icons/cybench_symbol_small.png">
	    </launchConfigurationTypeImage>
	</extension>



   <extension
         point="org.eclipse.ui.commands">
      <category
            id="FirstPlugin.commands.category"
            name="CyBench">
      </category>
      <command
            categoryId="FirstPlugin.commands.category"
            name="Run CyBench All tests"
            id="FirstPlugin.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.gocypher.cybench.plugin.handlers.BenchmarkLauncherHandler"
            commandId="FirstPlugin.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="FirstPlugin.commands.sampleCommand"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <!--menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="FirstPlugin.menus.sampleMenu"
               label="CyBench Tools"
               mnemonic="M">
            <command
                  commandId="FirstPlugin.commands.sampleCommand"
                  id="FirstPlugin.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution-->
      <!--menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="FirstPlugin.toolbars.sampleToolbar">
            <command
                  id="FirstPlugin.toolbars.sampleCommand"
                  commandId="FirstPlugin.commands.sampleCommand"
                  icon="icons/cybench_symbol_small.png"                
                  tooltip="Launch CyBench Benchmark">
            </command>
         </toolbar>
      </menuContribution-->
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="CyBenchTools"
            name="CyBench Tools">
      </category>
      <view
            category="CyBenchTools"
            class="com.gocypher.cybench.plugin.views.ReportsDisplayView"
            icon="icons/cybench_symbol_small.png"
            id="com.gocypher.cybench.plugin.views.ReportsDisplayView"
            inject="true"
            name="Cybench Reports">
      </view>
      <view
            category="CyBenchTools"
            class="com.gocypher.cybench.plugin.views.CyBenchExplorerView"
            icon="icons/cybench_symbol_small.png"
            id="com.gocypher.cybench.plugin.views.CyBenchExplorerView"
            inject="true"
            name="CyBench Explorer">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="com.gocypher.cybench.plugin.views.ReportsDisplayView"
               ratio="0.5"
               relationship="stack"
               relative="org.eclipse.jdt.ui.JavadocView"
               visible="false"
               >
         </view>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="com.gocypher.cybench.plugin.views.CyBenchExplorerView"
               ratio="0.5"
               relationship="stack"
               relative="org.eclipse.jdt.ui.PackageExplorer"
               visible="true"
               >
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
